                <view class="image-fit-view" bindtap="iconClick" mark:to="{{item.navgation}}">
                    <image class="fit-image" src="{{item.pic}}"></image>
                </view>
                <view>
                    <text>{{item.title}}</text>
                </view>
                <view>
                    <text>ï¿¥{{item.price}}</text>
                </view>
            </view>
        </block>
    </view>
</view>